mixin b_style()
	style(media='screen', type='text/css').
		 .ReadMsgBody{
				width 100%
				background-color #f2f2f2
		 }
		 .ExternalClass{
				width 100%
				background-color #f2f2f2
			}
			.ExternalClass,
				.ExternalClass p,
				.ExternalClass span,
				.ExternalClass font,
				.ExternalClass td,
				.ExternalClass div{
					line-height 100%
				}
				html{
					width 100%
				}
				body{
					-webkit-text-size-adjust none
					-ms-text-size-adjust none
					margin 0
					padding 0
				}
				table{border-spacing 0}
				img{
					height auto
					line-height 100%
					outline none
					text-decoration none
				}
				table td{border-collapse collapse}
				html, body{
					background-color #f2f2f2
					margin 0
					padding 0
				}
				br, strong br, b br, em br, i br{line-height 100%}
				.radius{
					border-radius 4px;
					-webkit-border-radius 4px
				}
				@media (max-width:640px){
					html, body{overflox-x:hidden}
					table, tr, tbody{ display:block; overflow:hidden}
					table{max-width:100% !important}
					.container{
						width:90% !important
					}

					img{max-width:100% !important}
					h1{font-size:1.5em}
					.td_block{display:block; clear:both; }

					table.table_normal{display:table}
					table.table_normal tbody{display:table-row-group}
					table.table_normal tr{display:table-row}
					.mobile_margin{margin:10px 0}
				}
